# Handle line endings automatically for files detected as text
* text=auto eol=lf

# Python files
*.py text eol=lf
*.pyw text eol=lf
*.pyx text eol=lf
*.pyd binary
*.pyo binary
*.pyc binary

# Documentation
*.md text eol=lf
*.txt text eol=lf
*.rst text eol=lf
*.csv text eol=lf

# Configuration files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.ini text eol=lf
*.cfg text eol=lf

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# Git files
.gitignore text eol=lf
.gitattributes text eol=lf

# Windows specific
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf